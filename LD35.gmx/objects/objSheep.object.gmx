    if ((id != sheep.id) &amp;&amp; (dist &lt; global.maxDist)) {// &amp;&amp; (abs(dir - sheep.direction) &lt; 90)) {
        
        if (nearDog || nearBark) {          
          if (random(1) &lt; scareChance) {
            sheep.scared = true;
          }
          findScared = true;
        }
    }  
}

